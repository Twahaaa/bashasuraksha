generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model KnownSample {
  id          Int      @id @default(autoincrement())
  fileUrl     String
  language    String
  confidence  Float
  transcript  String?
  region      String?
  keywords    String
  createdAt   DateTime @default(now())
}

model UnknownSample {
  id          Int      @id @default(autoincrement())
  fileUrl     String
  languageGuess String?
  confidence  Float
  transcript  String?
  clusterId   Int?
  region      String
  keywords    String
  embedding   Json
  createdAt   DateTime @default(now())

  cluster     Cluster? @relation(fields: [clusterId], references: [id])
}

model Cluster {
  id           Int      @id @default(autoincrement())
  centroid     Json?    
  sampleCount  Int      @default(0)
  createdAt    DateTime @default(now())

  samples      UnknownSample[]
}
